<?xml version = "1.0" encoding = "utf-8" ?>
<component name = "VideoSelectItem" extends = "Group" >
  <script type="text/brightscript" uri="pkg:/components/screens/video_select_item.brs" />
  <interface> 
    <field id = "itemContent" type = "node" onChange = "showcontent"/>
    <field id = "focusPercent" type = "float" onChange = "showfocus"/> 
    <field id = "rowFocusPercent" type = "float" onChange = "showrowfocus"/>
  </interface>
  <children >
    <Poster 
      id = "itemPoster" 
      translation = "[ 10, 10 ]" 
      width = "512" 
      height = "288" 
      scaleRotateCenter = "[ 256.0, 144.0 ]" >
    </Poster>
    <Label 
      id = "itemLabel" 
      translation = "[ 20, 264 ]" 
      horizAlign = "center" 
      width = "492" />
  </children>
</component>