<?xml version = "1.0" encoding = "utf-8" ?> 
<component name = "video_select_screen" extends = "Group" initialFocus = "video_list" >
  <script type="text/brightscript" uri="pkg:/components/screens/video_select_screen.brs" />
  <interface>
    <field id="component_name" type = "string" />
    <field id = "video_selected" type ="int" alias = "video_row.rowItemSelected" onChange = "onItemSelect" />
  </interface>
  <children >
    <Poster
      translation="[0, 0]"
      width="1920"
      height="1080"
      uri="http://sthsroku.net/clubhub/Content/images/backgroundmain.png"
      id="background"
      visible = "true" />
    <RowList 
      id = "video_row" 
      translation = "[ 130, 80 ]" 
      itemComponentName = "videoSelectItem" 
      numRows = "5" 
      itemSize = "[ 1608, 308 ]" 
      rowItemSize = "[ [536, 308] ]" 
      itemSpacing = "[ 0, 80 ]" 
      showRowLabel = "[ true ]" 
      drawFocusFeedback = "true" 
      vertFocusAnimationStyle = "fixedFocusWrap" 
      rowFocusAnimationStyle = "fixedFocusWrap" />
    <Video
        id="selected_video"
        visible="false"
        translation="[0,0]"
        width="1920"
        height="1080"
        enableUI = "false" />
  </children>
</component>
